#include<bits/stdc++.h>
#define  ll long long 
class Solution {
public:
  ll convertBinaryToDecimal(string s)
   {
      ll power = 0 ; 
      unsigned long long  res = 0 ;
      for(int i = s.size() -1 ; i>=0 ; i --)
      {
        res+=(pow(2,power))*( s[i] - '0');
        power++;

      }
      return res;
   }
   string converDecimalToBinary(ll num)
   {
    string res="";
    while(num > 0 )
    {
        if((num&1))
        {
           res.push_back('1');
        }
        else{
            res.push_back('0');
        }
        num/=2;
    }
    string zero(32-(int)res.size() , '0');
    return res+zero;
   }
    int reverseBits(int n) {
        string res=converDecimalToBinary(n);
        return convertBinaryToDecimal(res);
        
    }
};
