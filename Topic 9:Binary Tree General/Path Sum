/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left),
 * right(right) {}
 * };
 */
class Solution {
    bool checkPath(TreeNode* root, int targetSum, int sum ) {   

    
        if ((sum == targetSum)&&(root->left==nullptr&&root->right ==nullptr)) {
            return true;
        }
        if (root == nullptr) {
            return false;
        }
         int left = 0 , right = 0;
         if(root->right!=nullptr)
         {
    
            right=checkPath(root->right , targetSum, sum + root->right->val);
         }
          if(root->left!=nullptr)
         {
            left=checkPath(root->left,targetSum, sum + root->left->val );
         }
         return max(left , right);
       
    }

public:
    bool hasPathSum(TreeNode* root, int targetSum) {
        if(root==nullptr)
        {
            return false;
        }
        int sum = root->val;
        return checkPath(root, targetSum, sum);
    }
};
