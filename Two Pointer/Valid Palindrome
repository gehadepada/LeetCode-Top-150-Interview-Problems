class Solution {
public:
    bool isPalindrome(string s) {
       string y;
       for(int i=0;i<s.size();i++)
       {
           if(s[i]>='a'&&s[i]<='z')
           {
                y+=s[i];
           }
            else  if(s[i]>='A'&&s[i]<='Z')
             {
                 s[i]+=32;
                 y+=s[i];
             }
              else  if(s[i]>='0'&&s[i]<='9')
              {
                  y+=s[i];

              }
       }
              string d=y;
              reverse(y.begin(),y.end());
              if(d==y)
              {
                  return true;
              }
              return false;
       }



    
};
