class Solution {
public:
    int lengthOfLongestSubstring(string s) { 
        map<char , int>mp;
        int res = 0 ;
        int l = 0 ,r = 0 ;
      while(l<s.size()&& r<s.size())
        {
            if(mp[s[r]]>=1)
            {
                res=max(res  ,r-l);
                mp[s[l]]-- ;
                l++;
            }
            else{
                mp[s[r]]++;
                r++;
            }
        }
          res=max(res  ,r-l);
          return res;
        
    }
};
