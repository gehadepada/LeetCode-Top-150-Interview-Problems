class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
    
        vector<int>res;
        map<int ,int>mp;
        for(int i =0; i < nums.size() ; i++)
        {
            if( mp[nums[i]]<2)
            {
                mp[nums[i]]++;
                res.push_back(nums[i]);
            }
        }
         nums=res;
        return (int)nums.size();
     
        
    }
};
