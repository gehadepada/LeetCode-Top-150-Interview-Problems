class Solution {
public:
    int lengthOfLastWord(string s) {
        int res = 0;
        int flag = 0;
        for (int i = s.size() - 1; i >= 0; i--) {
            if (s[i] != ' ') {
                flag = 1;
                res++;
            } else {
                if (flag != 0) {
                    break;
                }
            }
        }
        return res;
    }
};
