class LRUCache {
public:
    struct Node {
        int value;
        int key;
        Node* prev;
        Node* next;
        Node(int key, int value)
            : key(key), value(value), prev(nullptr), next(nullptr) {}
    };
    int capacity;
    map<int, Node*> mp;
    Node* head;
    Node* trail;
    void remove(Node* node) {
        node->next->prev = node->prev;
        node->prev->next = node->next;
    }
    void insert(Node* node) {
        node->next = head->next;
        head->next->prev = node;
        node->prev = head;
        head->next = node;
    }

    LRUCache(int capacity) {
        this->capacity = capacity;
        head = new Node(0, 0);
        trail = new Node(0, 0);
        head->next = trail;
        trail->prev = head;
    }

    int get(int key) {
        if (mp.find(key) == mp.end())
            return -1;
        Node* node = mp[key];
        remove(node);
        insert(node);
        return node->value;
    }

    void put(int key, int value) {
        if (mp.count(key)) {
            Node* node = mp[key];
            node->value = value;
            remove(node);
            insert(node);
        } else {
            if (mp.size() >= capacity) {
                Node* lru = trail->prev;
                remove(lru);
                mp.erase(lru->key);
                delete lru;
                Node* node = new Node(key, value);
                insert(node);
                mp[key] = node;
            } else {
                Node* node = new Node(key, value);
                insert(node);
                mp[key] = node;
            }
        }
    }
};

/**
 * Your LRUCache object will be instantiated and called as such:
 * LRUCache* obj = new LRUCache(capacity);
 * int param_1 = obj->get(key);
 * obj->put(key,value);
 */
