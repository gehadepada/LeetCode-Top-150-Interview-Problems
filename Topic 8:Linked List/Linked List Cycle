/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    bool hasCycle(ListNode* head) {
        map<ListNode*, int> m;
        ListNode* pos;
        if (head == nullptr) {
            return false;
        }
        while (head->next != nullptr) {
            pos = head->next;

            if (m[pos]) {
                return true;
            }
            m[pos]++;
            head = head->next;
        }
        return false;
    }
};
